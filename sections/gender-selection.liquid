    border-color: white;
  } */
  
  .gender-selection__item:hover .gender-selection__overlay {
    background: rgba(0, 0, 0, 0.5);
  }
  
  /* Mobile responsive */
  @media screen and (max-width: 749px) {
    .gender-selection {
      grid-template-columns: 1fr 1fr;
      gap: 2px;
      min-height: 400px;
    }
    
    .gender-selection__item {
      min-height: 400px;
    }
    
    .gender-selection__title {
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }
    
    /* .gender-selection__button {
      padding: 0.6rem 1.2rem;
      font-size: 0.8rem;
    } */
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="container {{ section.settings.section_width }}">
    <div class="gender-selection js-animation-fade-in">
      
      <!-- For Her Section -->
      <div class="gender-selection__item">
        {%- if section.settings.image_for_her -%}
          <img src="{{ section.settings.image_for_her | image_url: width: 800 }}" 
               alt="{{ section.settings.title_for_her | default: 'For Her' }}" 
               class="gender-selection__image"
               width="800"
               height="500"
               loading="lazy">
        {%- else -%}
          <div class="gender-selection__image" style="background: linear-gradient(45deg, #ff6b6b, #ee5a52);"></div>
        {%- endif -%}
        
        <div class="gender-selection__overlay"></div>
        
        <div class="gender-selection__content">
          {%- if section.settings.title_for_her != blank -%}
            <h3 class="gender-selection__title">{{ section.settings.title_for_her }}</h3>
          {%- endif -%}
          
          {%- if section.settings.button_label_for_her != blank -%}
            <a href="{{ section.settings.link_for_her | default: '/collections/for-her' }}"
            style="top: 5rem;" 
               class="button button--filled uppercase">
              {{ section.settings.button_label_for_her }}
            </a>
          {%- endif -%}
        </div>
      </div>
      
      <!-- For Him Section -->
      <div class="gender-selection__item">
        {%- if section.settings.image_for_him -%}
          <img src="{{ section.settings.image_for_him | image_url: width: 800 }}" 
               alt="{{ section.settings.title_for_him | default: 'For Him' }}" 
               class="gender-selection__image"
               width="800"
               height="500"
               loading="lazy">
        {%- else -%}
          <div class="gender-selection__image" style="background: linear-gradient(45deg, #4ecdc4, #44a08d);"></div>
        {%- endif -%}
        
        <div class="gender-selection__overlay"></div>
        
        <div class="gender-selection__content">
          {%- if section.settings.title_for_him != blank -%}
            <h3 class="gender-selection__title">{{ section.settings.title_for_him }}</h3>
          {%- endif -%}
          
          {%- if section.settings.button_label_for_him != blank -%}
            <a href="{{ section.settings.link_for_him | default: '/collections/for-men' }}"
            style="top: 5rem;" 
               class="button button--filled uppercase">
              {{ section.settings.button_label_for_him }}
            </a>
          {%- endif -%}
        </div>
      </div>
      
    </div>
  </div>
</div>

