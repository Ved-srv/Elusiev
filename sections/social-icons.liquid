{%- style -%}
  #shopify-section-{{ section.id }} > div {
    padding-block-start: calc(var(--section-spacing-unit-size) * {{ section.settings.spacing_top }});
    padding-block-end: calc(var(--section-spacing-unit-size) * {{ section.settings.spacing_bottom }});
  }
  
  #shopify-section-{{ section.id }} .social-icons-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  #shopify-section-{{ section.id }} .social-icons-heading {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.5rem;
    font-weight: 700;
    color: rgba(var(--color-foreground), 1);
  }
  
  #shopify-section-{{ section.id }} .social-icons-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
  }
  
  #shopify-section-{{ section.id }} .social-icon-link {
    color: rgba(var(--color-foreground), 0.85);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  #shopify-section-{{ section.id }} .social-icon-link:hover {
    color: rgba(var(--color-foreground), 1);
    transform: translateY(-3px);
  }
  
  #shopify-section-{{ section.id }} .social-icon-link svg {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
  }
  
  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .social-icons-container {
      gap: 1.5rem;
    }
    
    #shopify-section-{{ section.id }} .social-icon-link svg {
      width: {{ section.settings.icon_size | times: 0.8 }}px;
      height: {{ section.settings.icon_size | times: 0.8 }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="social-icons-wrapper">
    {%- if section.settings.heading != blank -%}
      <h2 class="social-icons-heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
    
    <div class="social-icons-container">
